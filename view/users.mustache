            {{#tabela}}
                <tr style="background-color: black; color: white;"> <td> Id </td> <td> Nome </td> <td> Email </td> <td> Telemovel </td> <td> Telemovel (secund√°rio) </td> <td> Administrador </td> </tr>
  
            {{/tabela}}

        {{#users}}
                <tr>
                    <td>{{idconta}}</td>
                    <td>{{nomeConta}}</td>
                    <td>{{emailConta}}</td>
                    <td>{{telemovel}}</td>
                    <td>{{optionalTel}}</td>
                    <td>{{administrador}}</td>
